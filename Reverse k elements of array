#include <iostream>
using namespace std;

static const int maxSize = 30;

int main()
{
    int arr[maxSize] = { 20,40,50,60,30,80 };
    int n = 6;
    int k = 3;
    int temp, i, j;

    cout << "Original array: " << endl;
    for (i = 0; i < n; i++)
    {
        cout << arr[i] << " ";
    }
    cout << endl;

    for (i = 0, j = k - 1; i<j; i++, j--)
    {
        temp = arr[i];
        arr[i] = arr[j];
        arr[j] = temp;
    }

    cout << "Reversed array (k elements): " << endl;
    for (i = 0; i < n; i++)
    {
        cout << arr[i] << " ";
    }
    cout << endl;
    

    return 0;
}
